@model Vidly.ViewModel.NewMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Movies == null)
{
<h2>Fill the New Form </h2>
}
else {
    <h2>Edit Form</h2>
}
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
      @Html.LabelFor(m => m.Movies.Name)
      @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })
      @Html.ValidationMessageFor(m => m.Movies.Name)
    </div>
    <div class="form-group">
        <label for="ReleasedDate">Released Date</label>
        @Html.TextBoxFor(m => m.Movies.ReleasedDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.ReleasedDate)
          
    </div>
    <div class="form-group">
         <label for="DateAdded">Date Added</label>
        @Html.TextBoxFor(m => m.Movies.DateAdded, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.DateAdded)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.stock)
        @Html.TextBoxFor(m => m.Movies.stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.stock)
    </div>  
    <div class="form-group">
        <label>Genre Type </label>
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.GenreId)
     </div>
   
    @Html.HiddenFor(m => m.Movies.Id)
    <button type="Submit" class="btn btn-lg btn-danger">Save</button>

}


